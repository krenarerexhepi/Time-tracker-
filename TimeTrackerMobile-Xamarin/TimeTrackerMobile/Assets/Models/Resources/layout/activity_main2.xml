<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.krenarerexhepi.saw.MainActivity"
    android:background="#6272ceff">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:weightSum="1">
        <EditText
            android:layout_width="283.1dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Emri"
            android:ems="10"
            android:id="@+id/txtEmriMain"
            android:enabled="false"
            android:textColor="#ffffffff"
            android:textSize="18dp"
            android:gravity="top"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="20dp" />
        <EditText
            android:layout_width="283.1dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Mbiemri"
            android:ems="10"
            android:id="@+id/txtMbiemriMain"
            android:enabled="false"
            android:textColor="#ffffffff"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:layout_below="@+id/txtEmriMain"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="22dp" />
        <TextView
            android:layout_width="181.5dp"
            android:layout_height="43.5dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Zgjedh kompanine"
            android:id="@+id/textView"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="22dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:weightSum="1">
            <Spinner
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:id="@+id/spKompania"
                android:layout_below="@+id/txtMbiemriMain"
                android:layout_marginBottom="5dp"
                android:layout_gravity="left"
                android:layout_weight="0.93"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="0.0dp" />
            <ImageButton
                android:layout_width="45dp"
                android:layout_height="41dp"
                android:id="@+id/imgRefreshData"
                android:layout_gravity="right"
                android:layout_below="@+id/textView"
                android:layout_marginTop="10dp"
                android:background="#6272ceff"
                android:src="@drawable/ic_menu_refresh" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:id="@+id/linearLayout2">
        <TabHost
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/tabhost">
            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:orientation="vertical"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent">
                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_height="wrap_content"
                    android:layout_width="324.0dp"
                    android:layout_marginLeft="20dp" />
                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent" />
            </LinearLayout>
        </TabHost>
    </LinearLayout>
</RelativeLayout>